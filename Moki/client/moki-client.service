[Unit]
Description=Serve the live-reloaded moki HTTP client
After=nginx.service

[Service]
Type=simple
Environment="HOST=127.0.0.1"
ExecStart=/usr/bin/npm run start
WorkingDirectory=/usr/share/Moki/client
SyslogIdentifier=moki-client
TimeoutStopSec=30
Restart=always
RestartSec=1
StartLimitInterval=20
StartLimitBurst=5
User=mokic
Group=mokic

[Install]
WantedBy=multi-user.target
Alias=client
